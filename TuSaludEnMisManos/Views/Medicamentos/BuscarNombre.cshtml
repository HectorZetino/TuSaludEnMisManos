
@{

    ViewBag.Title = "BuscarNombre";
}
<h2>El farmaco buscado por nombre es: </h2>
<table style="width:100%">
    <tr>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>Cantidad</th>
        <th>Precio</th>
    </tr>
    <tr>
        <td>@ViewBag.Mostrar.Id</td>
        <td>@ViewBag.Mostrar.Nombre</td>
        <td>@ViewBag.Mostrar.Cantidad</td>
        <td>@ViewBag.Mostrar.Precio</td>
    </tr>

</table>